<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.etg.dam.tfg.programa.controlador.LogInControlador">
    <children>
        <VBox alignment="CENTER" spacing="15.0" layoutX="160.0" layoutY="80.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
            <padding>
                <Insets top="40" bottom="40" left="60" right="60" />
            </padding>

            <Label text="La librería de los videojuegos">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <TextField fx:id="txtUsuario" promptText="Usuario" />
            <PasswordField fx:id="txtContrasena" promptText="Contraseña" />

            <Button text="Iniciar sesión" fx:id="loginButton" onAction="#iniciarSesion" />
            <Button text="Registrarse" fx:id="registerButton" onAction="#abrirRegistro" />

            <Label fx:id="lblError" textFill="red" visible="false" />
        </VBox>
    </children>
</AnchorPane>
