<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="vbox_wishlist" fx:id="vbox_wishlist" prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <MenuBar fx:id="menu_bar_wishlist">
            <menus>
                <Menu fx:id="menu_cuenta" mnemonicParsing="false" text="Cuenta">
                    <items>
                        <MenuItem fx:id="men_item_perfil" mnemonicParsing="false" text="Perfil" />
                        <MenuItem fx:id="men_item_cam_contr" mnemonicParsing="false" text="Cambiar contraseña" />
                        <MenuItem fx:id="men_item_cerr_ses" mnemonicParsing="false" text="Cerrar sesión" />
                    </items>
                </Menu>
                <Menu fx:id="menu_wishlist" mnemonicParsing="false" text="Wishlist">
                    <items>
                        <MenuItem fx:id="men_item_ver_wl" mnemonicParsing="false" text="Ver wishlist" />
                        <MenuItem fx:id="men_item_exp_wl" mnemonicParsing="false" text="Exportar wishlist" />
                    </items>
                </Menu>
                <Menu fx:id="menu_juegos" mnemonicParsing="false" text="Juegos">
                    <items>
                        <MenuItem fx:id="men_item_ver_juegos" mnemonicParsing="false" text="Ver juegos" />
                        <MenuItem fx:id="men_item_exp_bib" mnemonicParsing="false" text="Exportar biblioteca" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <StackPane id="stack_pane_criterios" fx:id="stackpane_filtros" prefHeight="220.0" prefWidth="640.0">
            <children>
                <VBox id="vbox_criterios" fx:id="vbox_filtros" alignment="TOP_CENTER" prefHeight="212.0" prefWidth="554.0" spacing="10">
                    <children>
                        <Label fx:id="label_wishlist_expl" text="Añadir o consultar juegos de tu wishlist" textAlignment="CENTER">
                            <font>
                                <Font size="18.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                        </Label>
                        <HBox fx:id="hbox_nombre_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="505.0" spacing="10">
                            <children>
                                <Label fx:id="label_nombre_wishlist" text="Nombre" textAlignment="CENTER" prefWidth="100.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="textfield_nombre_wishlist" HBox.hgrow="ALWAYS" />
                            </children>
                            <padding>
                                <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_consola_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="505.0" spacing="10">
                            <children>
                                <Label fx:id="label_consola_wishlist" text="Consola" textAlignment="CENTER" prefWidth="100.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="combobox_consola_wishlist" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            </children>
                            <padding>
                                 <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_company_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="629.0" spacing="10">
                            <children>
                                <Label fx:id="label_company_wishlist" text="Compañía" textAlignment="CENTER" prefWidth="100.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="textfield_company_wishlist" HBox.hgrow="ALWAYS"/>
                            </children>
                            <padding>
                                 <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_precio_max_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="505.0" spacing="10">
                            <children>
                                <Label fx:id="label_precio_max_wishlist" text="Precio Máximo" textAlignment="CENTER" prefWidth="100.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="textfield_precio_max_wishlist" HBox.hgrow="ALWAYS"/>
                            </children>
                            <padding>
                                 <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_ordenar_por_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="505.0" spacing="10">
                            <children>
                                <Label fx:id="label_ordenar_por_wishlist" text="Ordenar por:" textAlignment="CENTER" prefWidth="100.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <ComboBox fx:id="combobox_ordenar_por_wishlist" prefWidth="150.0" HBox.hgrow="ALWAYS" />
                            </children>
                            <padding>
                                 <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_juegos_solo_wishlist" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="629.0" spacing="10">
                            <children>
                                <Label fx:id="label_juegos_solo_wishlist" text="Ver solo juegos en tu wishlist" textAlignment="CENTER" prefWidth="240.0">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Label>
                                <CheckBox fx:id="checkbox_juegos_wishlist" mnemonicParsing="false"  HBox.hgrow="NEVER" />
                            </children>
                            <padding>
                                 <Insets bottom="5.0" />
                            </padding>
                        </HBox>
                        <HBox fx:id="hbox_aplicar_filtros" alignment="CENTER" prefHeight="40.0" prefWidth="200.0" >
                            <children>
                                <Button fx:id="button_aplicar_filtros" mnemonicParsing="false" text="Aplicar Filtros">
                                    <font>
                                        <Font name="Consolas" size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </StackPane>
        <ScrollPane fx:id="scrollPaneFichas" fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <TilePane fx:id="tilePaneFichas" hgap="15.0" prefColumns="4" prefWidth="600.0" vgap="15.0">
                    <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                    </padding>
                    <VBox fx:id="vbox_ficha_juego_wishlist" alignment="CENTER" prefHeight="200.0" prefWidth="150.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-radius: 10; -fx-padding: 10;" spacing="5">
                        <ImageView fx:id="imageview_portada_wishlist" fitHeight="100.0" fitWidth="100.0" preserveRatio="true" />
                        <Label fx:id="label_juego_wishlist" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Juego" wrapText="true" alignment="CENTER" />
                        <Label fx:id="label_consola_juego_wishlist" style="-fx-font-size: 12px;" text="PS4" alignment="CENTER"/>
                        <Label fx:id="label_genero_juego_wishlist" text="JRPG" alignment="CENTER"/>
                        <HBox alignment="CENTER" spacing="5">
                            <Label fx:id="label_precio_wishlist"  style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Precio:" />
                            <Label fx:id="label_precio_valor_wishlist"  style="-fx-font-size: 13px;" text="XX.XX" />
                        </HBox>
                        <Button fx:id="button_add_o_ver_wishlist" style="-fx-font-size: 12px;" text="Ver Detalles" />
                    </VBox>
                    </TilePane>
            </content>
        </ScrollPane>
    </children>
</VBox>
