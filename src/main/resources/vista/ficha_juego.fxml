<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.etg.dam.tfg.programa.controlador.FichaJuegoControlador"
            prefWidth="400" prefHeight="500">

    <VBox alignment="CENTER" spacing="10.0" padding="20.0">
        <ImageView fx:id="imgPortada" fitWidth="200" fitHeight="300" preserveRatio="true" />
        <Label fx:id="lblNombre" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label fx:id="lblFecha" />
        <Label fx:id="lblEmpresa" />
        <Label fx:id="lblGeneros" wrapText="true" />
        <Label fx:id="lblConsolas" wrapText="true" />
        <Button text="Cerrar" onAction="#cerrarVentana" />
    </VBox>
</AnchorPane>
