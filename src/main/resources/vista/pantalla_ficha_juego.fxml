<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.etg.dam.tfg.programa.controlador.FichaJuegoControlador"
            prefWidth="400" prefHeight="500">

    <VBox alignment="CENTER" spacing="15.0">
        <padding><Insets top="20" right="20" bottom="20" left="20" /></padding>

        <ImageView fx:id="imgPortada" fitWidth="250" fitHeight="350" preserveRatio="true"
                   style="-fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.5), 15, 0.3, 0, 0);" />

        <Label fx:id="lblNombre" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;"/>
        <Label fx:id="lblFecha" style="-fx-font-size: 14px; -fx-text-fill: #777777;" />
        <Label fx:id="lblEmpresa" style="-fx-font-size: 14px; -fx-text-fill: #777777;" />
        <Label fx:id="lblGeneros" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />
        <Label fx:id="lblConsolas" wrapText="true" style="-fx-font-size: 14px; -fx-text-fill: #555555;" />

        <Button text="Cerrar" onAction="#cerrarVentana"
                maxWidth="200" style="-fx-font-size: 16px; -fx-background-color: #0078D4; -fx-text-fill: white; -fx-padding: 10 20;" />
    </VBox>
</AnchorPane>
